@page "/"
@namespace DadABase.Web.Pages

<PageTitle>@Data.Constants.ApplicationTitle</PageTitle>

<Row Style="padding: 20px; width: 95%;">
    <Column ColumnSize="ColumnSize.Is8.OnDesktop.Is8.OnTablet.Is12.OnMobile">
        <h1>Tell me a Joke, Dad!</h1>
        <LoadingIndicator @ref="jokeLoadingIndicator">
            <ul id="jokeList" style="list-style-type: none;">
              <li><JokeDisplayComponent myJoke="@myJoke" /></li>
            </ul>
        </LoadingIndicator>
        <button class="btn btn-primary" @onclick="ExecuteRandom" style="margin-top: 40px;">Tell me another one!</button>


        @if (imageDescriptionGenerated && showButtons)
        {
            <button class="btn btn-primary" @onclick="CreatePicture" style="margin-top: 40px; margin-left: 20px;">Paint me a picture!</button>
        }
        <br /><span style="margin-top: 40px; font-size: 1.2em; font-style: italic;">@jokeImageMessage</span>
        @if (imageGenerating)
        {
          <br /><span style="margin-top: 15px; font-size: 0.8em;">@jokeImageDescription</span>
        }
        <LoadingIndicator @ref="imageLoadingIndicator">
            <br />
            <img src="@jokeImageUrl" width="300" style="cursor: pointer;" @onclick="ShowImageDescriptionPopup" />
        </LoadingIndicator>
        <Modal @ref="imageDescriptionPopup">
            <ModalContent Centered>
                <ModalHeader>
                    <ModalTitle>Image Description</ModalTitle>
                    <CloseButton />
                </ModalHeader>
                <ModalBody>
                    <p>@jokeImageDescription</p>
                </ModalBody>
                <ModalFooter>
                    <Button Color="Color.Secondary" Clicked="@CloseImageDescriptionPopup">Close</Button>
                </ModalFooter>
            </ModalContent>
        </Modal>



        @if (jokeHistory.Any())
        {
            <div style="margin-top: 40px;">
                <h5 style="display: flex; align-items: center; cursor: pointer; user-select: none; font-size: 1rem;"
                    tabindex="0"
                    @onclick="ToggleHistory"
                    @onkeydown="@(e => { if (e.Key == "Enter" || e.Key == " ") ToggleHistory(); })">
                    Joke History
                    <span style="margin-left: 8px; font-size: 1.2em;">
                        @(isHistoryCollapsed ? "👁️" : "🙈")
                    </span>
                </h5>
                @if (!isHistoryCollapsed)
                {
                    <ul style="list-style-type: none; padding-left: 0;">
                        @foreach (var joke in jokeHistory)
                        {
                            <li><JokeDisplayComponent myJoke="@joke" /></li>
                        }
                    </ul>
                }
            </div>
        }
    </Column>
</Row>
<SnackbarStack @ref="snackbarstack" Location="SnackbarStackLocation.BottomEnd" />
